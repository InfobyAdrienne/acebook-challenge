<%= stylesheet_link_tag  'user', media: 'all' %>

<h1>Login</h1> 
<body class="body">
<div class="form">

<%= form_with url: sign_in_path, local: true do |form| %>

  <div class='mb-3'>
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control', placeholder:"steve@apple.com" %>
  </div>

  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :password, class:'form-control', placeholder:"password" %>
  </div>

  <div class='mb-3'>
    <%= form.submit "Login", class:'btn btn-primary' %>
  </div>

<% end %>

</div>
</body>