<%= form_with model: @post, url: new_post_path, local: true do |form| %>

  <%= form.label :message %>
  <%= form.text_field :message %>
  <%= form.text_field :user_id, value: Current.user.id, class:'d-none'%>
   
  <%= form.label "Uploaded image" %>
  <%= form.file_field :image %><br>
  
  <%= form.submit "Submit"%>
<% end %>


